@model Test
<form id="agree" method="post" asp-action="Accept">
    <input type="hidden" asp-for="Id">
</form>
<div class="container">
    <div class="row p-0 m-0">
        <div class="col-12">
            <h3 class="text-center">@Model.Description</h3>
            <div class="d-flex justify-content-center">
                <div class="form-check m-3">
                <input class="form-check-input" form="agree" type="checkbox" value="true" name="acceptedByUser" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    I agree to start
                </label>
            </div>
            </div>
            <div class="text-center">
                <button type="submit" form="agree" class="btn btn-success m-3">Proceed</button>
            </div>
        </div>
        <div class="text-danger d-flex justify-content-center" asp-validation-summary="All"></div>
    </div>
</div>
