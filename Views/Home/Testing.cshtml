@model TestQuestion
@{
ViewData["Title"]="Testing";
}

<div class="container">
    <div class="row p-0 m-0">
            <div class="text-center">
                <h2>@ViewBag.TestTitle</h2>
                <hr>
            </div>
        <div class="col-7">
            <div class="bg-light">
                <h4 class="p-3">Question: @Model.Question</h4>
            </div>
        </div>
        <div class="col-5">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2" class="text-center">Select answer</th>
                </tr>
                @foreach (var item in Model.Answers)
                {
                    <tr>
                        <td>
                            @item.AnswerText
                        </td>
                        <td>
                                <div class="form-check">
                                    <input form="question-form" class="form-check-input" type="radio" name="answerId" value="@item.Id"
                                    id="answer-check")>
                                </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <form id="question-form" asp-action="SaveAndNext" method="post">
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
        </form>
        <div class="text-center">
            <button form="question-form" id="btn" type="submit" class="btn btn-primary m-3 ">Next Question</button>
        </div>
    </div>
</div>
